<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.ufo.widgetdemo">

    <!-- To access Google+ APIs: -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <!--震动-->
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".recyclerview.refresh.RecyclerViewWithRefreshActivity"
            android:label="RecyclerViewWithRefreshActivity">
        </activity>
        <activity
            android:name=".recyclerview.loadmore.RecyclerViewWithLoadMoreActivity"
            android:label="RecyclerViewWithLoadMoreActivity">
        </activity>
        <activity
            android:name=".recyclerview.timeline.RecyclerViewWithTimeLineActivity"
            android:label="RecyclerViewWithTimeLineActivity">
        </activity>
        <activity
            android:name=".recyclerview.expandchecked.ExpandCheckedActivity"
            android:label="ExpandCheckedActivity">
        </activity>
        <activity
            android:name=".animation.fabwithtoolbar.FabWithToolbarActivity"
            android:label="FabWithToolbarActivity">
        </activity>
        <activity
            android:name=".recyclerview.cardview.RecyclerViewWithCardViewActivity"
            android:label="RecyclerViewWithCardViewActivity">
        </activity>
        <activity
            android:name=".recyclerview.sticky.StickyListActivity"
            android:label="StickyListActivity">
        </activity>
        <activity
            android:name=".recyclerview.chat.RecyclerViewWithChatActivity"
            android:label="RecyclerViewWithChatActivity">
        </activity>
    </application>

</manifest>