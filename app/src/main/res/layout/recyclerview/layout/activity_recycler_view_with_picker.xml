<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_recycler_view_with_picker"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ufo.widgetdemo.recyclerview.picker.RecyclerViewWithPickerActivity">

    <com.ufo.widgetdemo.recyclerview.picker.PickerView
        android:id="@+id/picker_view"
        android:padding="8dp"
        app:searchHint="搜索"
        app:searchPadding="8dp"
        app:searchTextSize="14sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_picker"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
