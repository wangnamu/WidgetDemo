<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

    <com.ufo.widgetdemo.recyclerview.timeline.TimeLineMarker
        android:id="@+id/recycler_view_time_line_item_mark"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingTop="16dp"
        app:beginLine="@color/colorDivider"
        app:endLine="@color/colorDivider"
        app:lineSize="1dp"
        app:marker="@drawable/ic_timeline_default_marker"
        app:markerSize="16dp"/>

    <TextView
        android:id="@+id/recycler_view_time_line_item_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="56dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textColor="@color/colorPrimaryText"/>


</RelativeLayout>